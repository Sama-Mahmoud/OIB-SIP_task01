<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <Button
        android:id="@+id/kv_to_cs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:text="Kv to CS"
        />
    <Button
        android:id="@+id/cs_to_kv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="CS TO KV"
        />
    <Button
        android:id="@+id/kv_to_fh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kv_to_cs"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:text="Kv to FH"
        />
    <Button
        android:id="@+id/fh_to_kv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cs_to_kv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="FH to KV"
        />
    <Button
        android:id="@+id/cs_tofh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kv_to_fh"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:text="CS to FH"
        />
    <Button
        android:id="@+id/fh_to_cs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fh_to_kv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="FH TO CS"
        />


    <EditText
        android:id="@+id/tempnumtxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/cs_tofh"
        android:layout_margin="30dp"
        android:hint="@string/enter_the_number"
        android:paddingStart="10dp"
        android:background="#54E8E7EA"
        />


    <TextView
        android:id="@+id/restxt"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="the result is : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tempnumtxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="60dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>